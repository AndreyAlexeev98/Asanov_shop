extends ../layout/base

block variables
    - var title='Asanov';
    - var description='Сайт по продаже мебели';
    - var pageClass='index-page';

block content
  .main__header
    input.serch-elem(type='text' placeholder='Поиск: Диван для кухни')
    button.btn-sign-in Войти
    .cart
      .cart__icon-wrap
        img.cart__icon(src='./src/icons/cart.png' alt='logo asanov')
        .cart__counter 10
      .cart__price.price
        .price__sum 25 000
        .price__currency ₽
  .main__content
    .cards
      h2.cards__title Лучшие предложения месяца
      .cards__controls.controls
        button.controls__left
          img(src='./src/icons/arrow-left.png' alt='arrow left')
        button.controls__right
          img(src='./src/icons/arrow-right.png' alt='arrow right')
